{% extends 'base.html.twig' %}

{% block title %}Show detail{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <h1 class="mt-4 mb-3">{{ show.title }}</h1>

        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('home') }}">Accueil</a>
            </li>
            <li class="breadcrumb-item active">{{ show.title }}</li>
        </ol>

        <!-- Content Row -->
        <div class="row">
            <!-- Map Column -->
            <div class="col-lg-12 mb-4">
                <!-- Embedded Google Map -->
                <iframe width="100%" height="400px" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                        src="http://maps.google.com/maps?hl=en&amp;ie=UTF8&amp;ll=37.0625,-95.677068&amp;spn=56.506174,79.013672&amp;t=m&amp;z=4&amp;output=embed"></iframe>
            </div>
        </div>
        <!-- /.row -->

        <!-- Contact Form -->
        <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
        <div class="row">
            <div class="col-lg-8 mb-4">
                <ul>
                    <li>{{ show.date | date("l d F - H:i") }}</li>
                    <li>{{ show.artist }}</li>
                    <li>status:
                        {% if ( show.close ) %}
                            <b class="badge badge-success">Ferm√©</b>
                        {% else %}
                            <b class="badge badge-success">Ouvert</b>
                        {% endif %}
                    </li>
                </ul>
            </div>
            <div class="col-lg-8 mb-4">
                <h3>Description</h3>
                <p class="text-justify">{{ show.description }}</p>
            </div>
        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->

{% endblock %}